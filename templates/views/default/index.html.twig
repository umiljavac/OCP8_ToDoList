{% extends 'base.html.twig' %}

{% block header_title %}
    <h1>Bienvenue sur Todo List, l'application vous permettant de gérer l'ensemble de vos tâches sans effort !</h1>
{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-md-12">
                <a href="{{ path('task_create') }}" class="btn-sized margin-bottom btn btn-success">Créer une nouvelle tâche</a>
                <a href="{{ path('task_list') }}" class="btn-sized margin-bottom btn btn-info">Consulter la liste des tâches à faire</a>
                <a href="{{ path('task_done') }}" class="btn-sized margin-bottom btn btn-warning">Consulter la liste des tâches terminées</a>
        </div>
    </div>
{% endblock %}
